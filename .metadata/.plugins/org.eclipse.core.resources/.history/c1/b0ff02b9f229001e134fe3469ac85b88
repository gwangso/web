<div class="row">
	<div class="col">
		<h1 class="text-center">상품목록</h1>
		<table class="table table-primary">
			<c:forEach items="${array}" var="vo">
			<!-- array에 있는 값을 하나씪 받아서 vo에 넣음 -->
				<tr>
					<td>${vo.pcode}</td>
					<td>${vo.pname}</td>
					<td >
						<fmt:formatNumber value="${vo.pprice}" pattern="#,###"/>
					</td>
					<td>
						<fmt:formatDate value="${vo.pdate}" patter="yyyy-MM-dd HH:mm:ss"/>
					</td>
				</tr>
			</c:forEach>
