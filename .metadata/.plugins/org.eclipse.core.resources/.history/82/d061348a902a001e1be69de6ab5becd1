<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>

<div class="row">
	<div class="col">
		<h1>상품목록</h1>
		<table>
			<c:forEach items="${array}" var="vo">
				<tr>
					<td>${vo.pcode}</td>
					<td>${vo.pname}</td>
					<td><fmt:formatNumber value="${vo.pprice}" pattern="#,###"/></td>
					<td><fmt:formatDate value="${vo.pdate}" pattern="%Y-%M-%D"/></td>
				</tr>
			</c:forEach>
		</table>
	</div>
</div>