<!-- 핸들바함수 -->
<script>
	Handlebars.registerHelper("fmtPrice", function(){
		return price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") + "원";
	})
</script>

<!-- 함수 -->
<script>
	let page = 1;
	
	getList();
	function getList(){
		$.ajax({
			url:"/pro/list.json", //같은서버라 http://를 생략가능
			type:"get",
			data:{page : page},
			dataType:"json",
			success:function(date){
				
			}
		})
	}
</script>