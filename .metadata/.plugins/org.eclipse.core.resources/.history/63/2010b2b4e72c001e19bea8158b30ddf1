<<script id="temp_list" type="text/x-handelbars-template">
	<table>
		<tr>
			<td>상품코드</td>
			<td>상품이름</td>
			<td>상품가격</td>
		</tr>
		{{#each .}}
		<tr>
			<td>{{pcode}}</td>
			<td>{{pname}}</td>
			<td>{{fmtPrice pprice}}</td>
		</tr>
		{{/each}}
	</table>
</script>

<!-- 핸들바함수 -->
<script>
	Handlebars.registerHelper("fmtPrice", function(){
		return price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") + "원";
	})
</script>
